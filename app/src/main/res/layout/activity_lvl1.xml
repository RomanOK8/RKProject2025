<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".lvl1"
    tools:visibility="visible">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:context=".lvl1"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/swing_play"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/obstacle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="572dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="180dp"
            android:background="@drawable/obstacle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/moveCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="0"
            android:textColor="#FF5500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameOverTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#80000000"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Game Over"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameOverTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24sp"
            android:background="#80000000"
            android:fontFamily="monospace"
            android:text="Retry"
            android:textColor="@android:color/white"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/CarImage"
            android:layout_width="196dp"
            android:layout_height="94dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="59dp"
            android:background="@drawable/starship_animation"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />
        <TextView
            android:id="@+id/secondChanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/coin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="648dp"
            android:layout_marginTop="241dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="91dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/coinCounterTextView"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="235dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="95dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/moveCounter"
            android:text="0"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/accelerator"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="34dp"
            android:background="@android:color/transparent"
            android:src="@drawable/accelerator" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/PauseButtonlvl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pauseButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016"
        app:srcCompat="@drawable/pauseimg"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/UpButtonlvl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="upButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761"
        app:srcCompat="@drawable/upbutton"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/downbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="downButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954"
        app:srcCompat="@drawable/downbutton"
        android:background="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>